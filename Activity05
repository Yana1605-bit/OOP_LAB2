internal class Program
{
    private static void Main(string[] args)
    {
        int[] num = new int[10];

        Console.WriteLine("Enter 10 integers (separated by spaces):");
        string input = Console.ReadLine();
        string[] numberStrings = input.Split(' ');

        // Checking if it has exactly 10
        if (numberStrings.Length != 10)
        {
            Console.WriteLine("You must enter exactly 10 integers.");
            return;
        }

        for (int i = 0; i < numberStrings.Length; i++)
        {
            if (!int.TryParse(numberStrings[i], out num[i]))
            {
                Console.WriteLine($"Invalid integer input: {numberStrings[i]}");
                return;
            }
        }

        // Accepting value of k
        Console.WriteLine("Enter the number of positions to shift (k):");
        if (!int.TryParse(Console.ReadLine(), out int k))
        {
            Console.WriteLine("Invalid input for k.");
            return;
        }

        // Original array output
        Console.WriteLine("Original Array:");
        PrintArray(num);

        // For shift the array
        ShiftArray(num, k);

        // Shifted array output
        Console.WriteLine("Shifted Array:");
        PrintArray(num);
    }

    static void ShiftArray(int[] array, int k)
    {
        int n = array.Length;
        // Normalize k
        k = k % n;

        // If k is 0, no need to shift
        if (k == 0) return;

        // Creating new array to hold the shifted values
        int[] shiftedArray = new int[n];

        // For elements
        for (int i = 0; i < n; i++)
        {
            shiftedArray[(i + k) % n] = array[i];
        }

        Array.Copy(shiftedArray, array, n);
    }

    static void PrintArray<T>(T[] array)
    {
        Console.WriteLine(string.Join(", ", array));
    }
}
